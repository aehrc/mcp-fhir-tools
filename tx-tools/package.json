{
  "name": "mcp-tx-tools",
  "version": "1.0.0",
  "description": "Tools for querying FHIR terminology from LLMs.",
  "type": "module",
  "bin": {
    "mcp-tx-tools": "dist/stdio.js"
  },
  "scripts": {
    "build": "npx tsc",
    "start-stdio": "node dist/stdio.js",
    "start-sse": "node dist/sse.js",
    "inspect-stdio": "npx @modelcontextprotocol/inspector bun src/stdio.ts",
    "inspect-sse": "npx @modelcontextprotocol/inspector bun src/sse.ts",
    "test": "npx jest",
    "lint": "npx eslint . --ext .ts,.js",
    "lint:fix": "npx eslint . --ext .ts,.js --fix",
    "format": "npx prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "npx prettier -l \"**/*.{ts,js,json,md}\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "FHIR",
    "LLM",
    "Model Context Protocol",
    "MCP"
  ],
  "author": "Australian e-Health Research Centre, CSIRO",
  "contributors": [
    {
      "name": "John Grimes",
      "email": "John.Grimes@csiro.au",
      "url": "https://people.csiro.au/G/J/john-grimes"
    }
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/fhir": "^0.0.41",
    "express": "^4.21.2",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.14",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.3.1",
    "typescript": "^5.2.2"
  },
  "files": [
    "dist"
  ]
}
